def pad_key(key, max_len):
    res = key+" "*(max_len-len(key))
    return res

def get_registry(hive, path):
    res = sys.get_reg(hive, path)
    key_lengths = [len(i) for i in res.keys()]
    max_len = 0
    if len(key_lengths) != 0:
        max_len = max(key_lengths)
    for k in res:
        v = res[k]
        pk = pad_key(k,max_len)
        print(f"{pk} : {v}")

