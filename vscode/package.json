{
    "name": "eldritch",
    "description": "An Eldritch language server",
    "icon": "images/eldritch.png",
    "extensionKind": [
        "workspace"
    ],
    "author": "spellshift/realm",
    "license": "GPL-3.0-only",
    "version": "0.0.5",
    "repository": {
        "type": "git",
        "url": "https://github.com/spellshift/realm"
    },
    "publisher": "spellshift",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:starlark"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "eldritch",
                "aliases": [
                    "Eldritch"
                ],
                "extensions": [
                    ".eldritch"
                ],
                "filenames": [],
                "configuration": "./syntaxes/starlark.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "eldritch",
                "scopeName": "source.starlark",
                "path": "./syntaxes/starlark.tmLanguage.json"
            }
        ],
        "breakpoints": [
            {
                "language": "eldritch"
            }
        ],
        "debuggers": [
            {
                "type": "eldritch",
                "label": "Eldritch Debug",
                "program": "/usr/bin/env",
                "args": [
                    "golem",
                    "--dap"
                ],
                "languages": [
                    "eldritch"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "The program to debug.",
                                "default": "${file}"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "eldritch",
                        "request": "launch",
                        "name": "Launch Program",
                        "program": "${file}"
                    }
                ]
            }
        ],
        "configuration": {
            "properties": {
                "eldritch.lspPath": {
                    "type": "string",
                    "default": "golem",
                    "description": "The path to the binary to invoke (possibly on the path) for the plugin to invoke that handles LSP over stdin/stdout"
                },
                "eldritch.lspArguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "--lsp"
                    ],
                    "description": "Additional arguments that should be passed to the binary at eldritch.lspPath"
                },
                "starlark.enableGotoDefinition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to ask the LSP server to enable Goto Definition functionality"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.2",
        "@typescript-eslint/parser": "^4.32.0",
        "eslint": "^7.32.0",
        "mocha": "^9.0.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "vsce": "^2.15.0"
    }
}
